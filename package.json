{
  "name": "bidwars-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BidWars - Live Auction Platform",
  "scripts": {
    "install:all": "pnpm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "dev:gateway": "pnpm --filter api-gateway dev",
    "dev:user": "pnpm --filter user-service dev",
    "dev:item": "pnpm --filter item-service dev",
    "dev:auction": "pnpm --filter auction-service dev",
    "dev:bid": "pnpm --filter bid-service dev",
    "dev:notification": "pnpm --filter notification-service dev",
    "dev:leaderboard": "pnpm --filter leaderboard-service dev",
    "build:all": "pnpm -r run build",
    "dev:all": "concurrently -n \"GATEWAY,USER,ITEM,AUCTION,BID,NOTIF,LEADER\" -c \"blue,green,yellow,magenta,cyan,grey,white\" \"pnpm dev:gateway\" \"pnpm dev:user\" \"pnpm dev:item\" \"pnpm dev:auction\" \"pnpm dev:bid\" \"pnpm dev:notification\" \"pnpm dev:leaderboard\""
  },
  "devDependencies": {
    "@testcontainers/kafka": "^11.10.0",
    "@testcontainers/mongodb": "^11.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.0",
    "jest": "^30.2.0",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.20.4",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.10.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2"
  }
}

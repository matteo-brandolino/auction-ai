{
  "name": "bidwars-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BidWars - Live Auction Platform",
  "scripts": {
    "install:all": "pnpm install",
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "dev:gateway": "pnpm --filter api-gateway dev",
    "dev:user": "pnpm --filter user-service dev",
    "dev:item": "pnpm --filter item-service dev",
    "dev:auction": "pnpm --filter auction-service dev",
    "build:all": "pnpm -r run build",
    "dev:all": "concurrently -n \"GATEWAY,USER,ITEM,AUCTION\" -c \"blue,green,yellow,magenta\" \"pnpm dev:gateway\" \"pnpm dev:user\" \"pnpm dev:item\" \"pnpm dev:auction\""
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2"
  }
}
